// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "pgsql:5432"
}

model User {
  id        Int     @default(autoincrement()) @id
  name      String? @unique
  status    e_status @default(OFFLINE)
  friendIds Int[]
  winIds    Int[]
  loseIds   Int[]
  autorization Autorization?
}

model Game {
  id        Int     @default(autoincrement()) @id
  winnerId  Int
  loserId   Int

}

enum e_status {
  OFFLINE
  ONLINE
  ONGAME
}

model Autorization {
  tokenId   Int       @default(autoincrement()) @id
  token     String
  code      String
  owner     User?     @relation(fields: [ownerId], references: [id])
  ownerId   Int?      @unique
}
