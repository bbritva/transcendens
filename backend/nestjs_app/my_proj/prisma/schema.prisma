generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id
  name      String? @unique
  status    eStatus @default(OFFLINE)
  image     String?
  friendIds Int[]
  wins      Game[]  @relation("win")
  loses     Game[]  @relation("lose")
  token     Token?  @relation("token", fields: [tokenId], references: [id])
  tokenId   Int?   @unique
}
enum eStatus {
  OFFLINE
  ONLINE
  ONGAME
}

model Game {
  id        Int     @default(autoincrement()) @id
  winner    User    @relation("win", fields: [winnerId], references: [id])
  winnerId  Int
  loser     User    @relation("lose",fields: [loserId], references: [id])
  loserId   Int     
  result    String
}

model Token {
  id        Int     @default(autoincrement()) @id
  access_token  String @unique
  token_type    String
  expires_in    Int 
  refresh_token String
  scope         String
  created_at    Int
  owner         User?   @relation("token")
}

model Channel {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  history   Json        @default("{}")
  ownerId   Int
  guestIds  Int[]
  admIds    Int[]
  mutedIds  Int[]
  bannedIds Int[]
}

